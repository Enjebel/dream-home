{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "root": "server",
    "nixpacksPlan": {
      "phases": {
        "install": { "cmds": ["npm install --legacy-peer-deps"] },
        "build": { "cmds": ["echo 'Build phase bypassed'"] }
      }
    },
    "watchPatterns": ["/server/**"]
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}